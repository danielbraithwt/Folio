extends layout

block headtags
	link(rel='stylesheet', href='/stylesheets/projects.css')

block content
	div(class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-4")
		- for (var p in projects)
			div(class="project")
				div(class="project_information")
					div(class="project_title_name")= projects[p].name
					div(class="project_title_desc")= projects[p].description

				div(class="project_buttons")
					if (projects[p].url != "")
						a(class="btn btn-info", href=projects[p].url)= "View"

					if loggedIn
						a(class="btn btn-warning", href=("/projects/edit/" + projects[p].id))= "Edit Project"

						a(class="btn btn-danger", href=("/projects/delete/" + projects[p].id))= "Delete Project"

