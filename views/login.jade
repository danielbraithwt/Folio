extends layout

block headtags
	link(rel='stylesheet', href='/stylesheets/login.css')

block content	
	div(id="login_form", class="col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4")
		div(id="login_form_title")= title
	
		form(href="/login", method='post', class="form_group" enctype="multipart/form-data")
			div(class="input-group input-group-lg" style="margin-bottom: 20px;")
				span(class="input-group-addon", id="basic-addon1")
					span(class="glyphicon glyphicon-user")
				input(type="text", name="username", class="form-control", placeholder="Username", aria-describedly="basic-addon1")
			
			div(class="input-group input-group-lg" style="margin-bottom: 20px;")
				span(class="input-group-addon")
					span(class="glyphicon glyphicon-lock")
				input(type="password", name="password", class="form-control" placeholder="Password")
			
			button(type="submit", class="btn btn-lg btn-success")= "Submit"	
